@model IEnumerable<Product>
@*@model Tuple<IEnumerable<Product>, Dictionary<int, string>, Dictionary<int, string>, Dictionary<int, string>>*@

@{
    ViewData["Title"] = "ProductsList";
}

<h1>ProductsList</h1>

<p>
    <a asp-action="CreateProduct">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Модель
            </th>
            <th>
                Тип кузова
            </th>
            <th>
                Тип топлива
            </th>
            <th>
                Ёмкость двигателя
            </th>
            <th>
                Год выпуска
            </th>
            <th>
                Путь к картинке
            </th>
            <th>
                Марка
            </th>
            <th>
                Цена
            </th>
            <th>
                Категория
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarBody)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuelType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EngineCapacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Img)
                </td>
                <td>
                    
                    @Html.DisplayFor(modelItem => item.Brand.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DeleteProduct" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
