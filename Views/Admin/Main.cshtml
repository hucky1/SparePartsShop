@model IEnumerable<Client>

@{
    ViewData["Title"] = "Main";
}

<h1 class="text-center">Main</h1>
<br/><br />
     <div class="text-center">
         <a asp-action="ProductsList" class="btn btn-primary text-center">Товары</a>
         <a asp-action="ReviewsList" class="btn btn-primary text-center">Отзывы</a>
     </div>
<br /><br />

<table class="table container">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Order" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="DeleteOrder" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
    
</table>
