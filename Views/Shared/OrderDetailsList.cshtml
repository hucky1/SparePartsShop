@model IEnumerable<SparePartsShop.Models.OrderItem>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Категория
                </th>
                <th>
                    Название
                </th>
                <th>
                    Цена
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Cost)
                    </td>
                    <td>
                       
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

